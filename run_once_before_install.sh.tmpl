  func_name="post_install_$package"
  eval "just_installed=\$just_installed_$package"
  if [[ $(type -t $func_name) == function ]]; then
    if [[ $just_installed == true ]]; then
      echo ""
      log "$(eval "$func_name")" "ðŸ’¡" "$YELLOW" false
    fi
  fi
done

