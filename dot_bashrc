# If Not Interactive, Do Nothing
case $- in
*i*) ;;
*) return ;;
esac

# Aliases
source "$HOME/.aliases"

# Easy Source When Making Edits
alias sc="source $HOME/.bashrc"

# Functions
source "$HOME/.functions"

# Default Prompt
export PS1="\[\e[32m\]\u\[\e[m\]\[\e[32m\]@\[\e[m\]\[\e[32m\]\h\[\e[m\]:\[\e[34m\]\w\[\e[m\]\\$ "

# Starship Prompt
eval "$(starship init bash)"
